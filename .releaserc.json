{
  "branches": ["main", "master"],
  "ci": false,
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "breaking", "scope": "*", "release": "major" },
          { "type": "chore", "scope": "*", "release": false },
          { "type": "ci", "scope": "*", "release": false },
          { "type": "docs", "scope": "*", "release": false },
          { "type": "feat", "scope": "*", "release": "minor" },
          { "type": "fix", "scope": "*", "release": "patch" },
          { "type": "refactor", "scope": "*", "release": "patch" },
          { "type": "security", "scope": "*", "release": "patch" },
          { "type": "style", "scope": "*", "release": "patch" },
          { "type": "test", "scope": "*", "release": false },
          { "type": "perf", "scope": "*", "release": "patch" },
          { "type": "build", "scope": "*", "release": "patch" },
          { "type": "revert", "scope": "*", "release": "patch" }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "breaking", "section": "‚ö† BREAKING CHANGES", "hidden": false },
            { "type": "feat", "section": "‚ú® –ù–æ–≤—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏", "hidden": false },
            { "type": "fix", "section": "üêõ –ò—Å–ø—Ä–∞–≤–ª–µ–Ω–∏—è", "hidden": false },
            { "type": "refactor", "section": "üì¶ –†–µ—Ñ–∞–∫—Ç–æ—Ä–∏–Ω–≥", "hidden": false },
            { "type": "style", "section": "üíé –°—Ç–∏–ª–∏–∑–∞—Ü–∏—è", "hidden": false },
            { "type": "security", "section": "üîí –ë–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç—å", "hidden": false },
            { "type": "chore", "section": "‚ôªÔ∏è –î—Ä—É–≥–∏–µ –∏–∑–º–µ–Ω–µ–Ω–∏—è", "hidden": false },
            { "type": "ci", "section": "‚öôÔ∏è –ê–≤—Ç–æ–º–∞—Ç–∏–∑–∞—Ü–∏—è", "hidden": false },
            { "type": "docs", "section": "üìö –î–æ–∫—É–º–µ–Ω—Ç–∞—Ü–∏—è", "hidden": false },
            { "type": "test", "section": "üö® –¢–µ—Å—Ç—ã", "hidden": false },
            { "type": "build", "section": "üõ† –°–±–æ—Ä–∫–∞", "hidden": false },
            { "type": "revert", "section": "üóë –û—Ç–∫–∞—Ç", "hidden": false },
            { "type": "perf", "section": "üöÄ –ü—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å", "hidden": false }
          ]
        }
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} :tada:",
        "labels": ["release"],
        "releasedLabels": ["released"]
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "yarn.lock", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
      }
    ]
  ]
}
